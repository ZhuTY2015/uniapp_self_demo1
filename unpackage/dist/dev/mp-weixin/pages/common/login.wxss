.content-box .form-item-box .uni-easyinput {
  background-color: #F3F3F3;
  padding: 10rpx  0;
  border-radius: 10rpx;
}
.content-box .form-count {
  font-size: 32rpx;
  position: relative;
  top: 20rpx;
  text-align: right;
}
.content-box .btn-footer {
  margin-top: 80rpx;
}
.content-box .btn-footer button.login-btn {
  border: none;
  border-radius: 50rpx;
  background: -webkit-linear-gradient(left, #2D8CF0, #B5DEFE);
  background: linear-gradient(to right, #2D8CF0, #B5DEFE);
  color: #FFFFFF;
}
.content-box .btn-footer button.login-btn:after {
  border: none;
}
.content-box .tips {
  font-size: 30rpx;
  margin-top: 20rpx;
  color: #999999;
}
.content-box .tips text {
  color: #333333;
}
.content-box .float-btn {
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  font-size: 30rpx;
  color: #42B187;
}
.uni-countdown {
  text-align: right !important;
  -webkit-align-content: flex-end !important;
          align-content: flex-end !important;
  -webkit-box-pack: end !important;
  -webkit-justify-content: flex-end !important;
          justify-content: flex-end !important;
}
.uni-countdown text {
  font-size: 30rpx !important;
  color: #999999 !important;
}
.uni-countdown .uni-countdown__number {
  display: none !important;
}
.uni-countdown .uni-countdown__number:last-child {
  display: inline-block !important;
}
.uni-countdown .uni-countdown__splitor {
  display: none !important;
}

