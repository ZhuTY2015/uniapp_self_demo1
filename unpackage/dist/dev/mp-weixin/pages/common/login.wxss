.content-box {
  padding: 30rpx;
  background-color: #FFFFFF;
}
.content-box .uni-easyinput__content-input {
  padding-left: 0 !important;
}
.content-box .title {
  font-size: 40rpx;
  margin-bottom: 60rpx;
}
.content-box .form-item-box {
  position: relative;
}
.content-box .form-item-box::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 45rpx;
  height: 1rpx;
  background-color: #EEEEEE;
}
.content-box .form-count {
  font-size: 32rpx;
  position: relative;
  top: 20rpx;
  text-align: right;
}
.content-box .btn-footer {
  margin-top: 80rpx;
}
.content-box .tips {
  font-size: 30rpx;
  margin-top: 20rpx;
  color: #999999;
}
.content-box .tips text {
  color: #333333;
}
.content-box .float-btn {
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  font-size: 30rpx;
  color: #42B187;
}
.uni-countdown {
  text-align: right !important;
  -webkit-align-content: flex-end !important;
          align-content: flex-end !important;
  -webkit-box-pack: end !important;
  -webkit-justify-content: flex-end !important;
          justify-content: flex-end !important;
}
.uni-countdown text {
  font-size: 30rpx !important;
  color: #999999 !important;
}
.uni-countdown .uni-countdown__number {
  display: none !important;
}
.uni-countdown .uni-countdown__number:last-child {
  display: inline-block !important;
}
.uni-countdown .uni-countdown__splitor {
  display: none !important;
}

