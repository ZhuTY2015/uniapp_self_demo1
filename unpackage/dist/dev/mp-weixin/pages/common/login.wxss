  width: 90%;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%, -60%);
          transform: translate(-50%, -60%);
}
.content-box .title {
  font-size: 40rpx;
  margin-bottom: 100rpx;
  text-align: center;
}
